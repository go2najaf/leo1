<!-- Hero -->
<section class="hero">

	<!-- ===========================================
		 ======== Under Construction pop up ======== -->

	<div class="underConstruction">
		<div class="ui container">
			<h1><strong>We're working hard to bring you the vet booking feature very soon!</strong></h1>
			<div class="image" style='width:25%''>
				<%= image_tag('construction-hats.png', class:'responsive-image') %>
			</div>
			<h1><strong>Please <%= link_to('sign in', new_user_session_path) %> now to keep updated!</strong></h1>
		</div>
	</div>

	<!-- ===========================================
		 ======== Up until booking is ready ======== -->
	<div class="hero-image">
		<%= image_tag('hero-image_01@2x.png', class:'responsive-image') %>
	</div>
	<div class="hero-content">
		<div class="ui container">
			<h1>
				<strong>Need a vet?</strong> We got you covered
			</h1>
			<form class="main-search">
				<div class="form-field">
					<div class="button-group">
						<%= select_tag 'Type of Visit', options_for_select(['Regular Checkup or Emergency', ['Regular Checkup'], ['Emergency']]), class: 'form-item' %>
						<button class="button success mini">Chat Now</button>	
					</div>
				</div>
				<div class="form-field">
					<%= select_tag 'Type of Pet', options_for_select(['Type of Pet', ['Dog'], ['Cat']]), class: 'form-item' %>
				</div>
				<div class="form-field">
					<input class="form-item" type="text" id="zip" name="zip" placeholder="Zip">
				</div>
				<div class="form-action">
					<input type="submit" name="search" id="search_button" class="button secondary large" value="SEARCH">
				</div>
			</form>
		</div>
	</div>
</section>

<!-- Chat -->
<section class="home-section chat">
	<div class="ui container">
		<div class="image">
			<%= image_tag('vet-greeting.svg', class:'responsive-image') %>
		</div>
		<div class="content">
			<h2>
				Need immediate advice?<br>
				Well you're in luck!
			</h2>
			<p class="lead">Petcreds has Vets ready to chat right now</p>
			<div class="actions">
				<a href="#" class="button primary" alt="Go to Message Center Page" title="Launch message center">
					Launch message center
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Features -->
<section class="home-section features">
	<div class="ui container">
		<div class="image">
			<%= image_tag('lady-Phone.png', class:'responsive-image') %>
		</div>
		<div class="content">
			<h2>Going out of town?</h2>
			<p class="lead">Pet care has never been this easy</p>
			<ul class="arrow-list">
				<li>Share your pets information with caretakers instantly</li>
        <li>Build a history of your pets healthcare needs</li>
        <li>Share multiple pets at once</li>
			</ul>
			<div class="actions">
				<a class="action button primary" alt="Go to sign up Page" title="Create a pet profile now">
					Create a pet profile now
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Listing -->
<section class="home-section listing">
	<div class="ui container">
		<div class="image">
			<%= image_tag('pets.svg', class:'responsive-image') %>
		</div>
		<div class="content">
			<h2>Is healing pets your passion?</h2>
			<p class="lead">List your practice to access thousands of pet owners</p>
			<ul class="arrow-list">
				<li>Attract and obtain new clients</li>
        <li>Build and strenghthen your online presense</li>
        <li>Deliver a reliable booking experience for your patrons</li>
			</ul>
			<div class="actions">
        		<%= link_to('Learn More', root_path, class: 'action button secondary') %>
			</div>
		</div>
	</div>
</section>

<!-- Mobile App -->
<section class="home-section mobile-app">
	<div class="ui container">
		<div class="image">
			<%= image_tag('mobile-apps.png', class:'responsive-image') %>
		</div>
		<div class="content">
			<h2>Going out of town?</h2>
			<p class="lead">Pet care has never been this easy</p>
			<ul class="arrow-list">
				<li>Book appointments on the fly</li>
        <li>Review hundreds of vets in your area</li>
			</ul>
			<div class="actions">
				<a href="https://itunes.apple.com/en/genre/ios/id36?mt=8" target="_blank">
					<%= image_tag('app-store.svg') %>
				</a>
				<a href="https://play.google.com/store?hl=en" target="_blank">
					<%= image_tag('google-play.svg') %>
				</a>
			</div>
		</div>
	</div>
</section>

<!-- Careers -->
<section class="home-section careers">
	<div class="ui container">
		<div class="image">
			<%= image_tag('contract.svg', class:'responsive-image') %>
		</div>
		<div class="content">
			<h2>Passionate about pets?</h2>
			<p class="lead">Petcreds is always looking for new talent</p>
			<ul class="arrow-list">
				<li>Join a rapidly growing industry</li>
        <li>Build produts with a passionate, dedicated team</li>
        <li>Awesome pet-friendly work environment!</li>
			</ul>
			<div class="actions">
				<a class="action button inverted" alt="Go to Career Page" title="Show us what you got">Show us what you got</a>
			</div>
		</div>
	</div>
</section>


<script>
	$('.form-item').each(function() {
		$(this).on('click', function() {
			$('.underConstruction').show('slow');
		});
	});

	$('.form-action').on('click', function() {
		$('.underConstruction').show('slow');
	});

	$('.underConstruction').on('click', function() {
		$(this).hide('slow');
	});
</script>
